{
  "name": "dotkernel/dot-controller-plugin-authentication",
  "type": "library",
  "description": "Authentication DK controller plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "n3vrax",
      "email": "tibi@apidemia.com"
    }
  ],
  "require": {
    "php": "^5.6 || ^7.0",
    "psr/http-message": "^1.0",
    "container-interop/container-interop": "^1.1",

    "dotkernel/dot-authentication": "0.6.x-dev",
    "dotkernel/dot-controller": "0.6.x-dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "Dot\\Controller\\Plugin\\Authentication\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DotTest\\Controller\\Plugin\\Authentication\\": "test/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-authentication.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-controller.git"
    }
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "0.6-dev"
    }
  }
}
